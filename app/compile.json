{
  "targets": [
    {
      "type": "source",
      "outputPath": "source-output",
      "environment": {
        "qx.globalErrorHandling": false
      }
    },
    {
      "type": "hybrid",
      "outputPath": "hybrid-output"
    },
    {
      "type": "build",
      "outputPath": "build-output",
      "environment": {
        "qx.nativeScrollBars" : true,
        "qx.dynlocale" : false,
        "qx.dyntheme" : false,
        "qx.emulatemouse" : false,

        "qx.aspects" : false,
        "qx.debug" : false,
        "qx.debug.databinding" : false,
        "qx.debug.ui.queue" : false,
        "qx.debug.dispose" : false,
        "qx.debug.io" : false,
        "app.loadCordova": true
      }
    }
  ],
  "defaultTarget": "source",
  "locales": [ "de", "en" ],
  "environment": {
    "app.loadCordova": false
  },

  "applications": [
    {
      "class": "app.Application",
      "theme": "app.theme.Theme",
      "name": "app",
      "include": ["app.model.activity.*"]
    }
  ],

  "libraries": [
    "../qooxdoo/framework",
    "."
  ]
}