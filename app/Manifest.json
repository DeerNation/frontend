{
  "info" : 
  {
    "name" : "app",

    "summary" : "Hirschberg App Frontend",
    "description" : "This is the frontend of the Hirschberg App.",
    
    "homepage" : "http://www.hirschberg-sauerland.de/",

    "license" : "MIT",
    "authors" : 
    [
      {
        "name" : "Tobias Br√§utigam (peuter)",
        "email" : "tbraeutigam@gmail.com"
      }
    ],

    "version" : "master",
    "qooxdoo-versions": ["5.1"]
  },

  "provides" :
  {
    "namespace"   : "app",
    "encoding"    : "utf-8",
    "class"       : "source/class",
    "resource"    : "source/resource",
    "translation" : "source/translation",
    "type"        : "application",
    "webfonts": [
      {
        "name": "FARegular",
        "defaultSize": 40,
        "mapping": "fa-regular.map",
        "resources": [
          "app/icons/fontawesome/fa-regular-400.ttf"
        ]
      },
      {
        "name": "FASolid",
        "defaultSize": 40,
        "mapping": "fa-solid.map",
        "resources": [
          "app/icons/fontawesome/fa-solid-900.ttf"
        ]
      },
      {
        "name": "FABrands",
        "defaultSize": 40,
        "mapping": "fa-brands.map",
        "resources": [
          "app/icons/fontawesome/fa-brands-400.ttf"
        ]
      }
    ]
  },

  "externalResources" :
  {
    "script": [
      "js/socketcluster.js",
      "js/WAMPClient.bundle.min.js",
      "js/showdown.min.js"
    ],
    "css": [
      "css/style.css"
    ]
  }
}

